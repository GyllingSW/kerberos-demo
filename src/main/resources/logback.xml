<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} [ %-5p ] %logger{16} : %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.boot">
        <level value="INFO" />
    </logger>

    <logger name="waffle.spring">
        <level value="DEBUG" />
    </logger>

    <root level="INFO">
        <appender-ref ref="Console"/>
    </root>
</configuration>
